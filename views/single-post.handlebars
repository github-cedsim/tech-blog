<main>
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <p><small>Posted by {{post.username}} on {{post.createdAt}}</small></p>
  <div id="comments">
    {{#each comments}}
      <div class="comment">
        <p>{{this.content}}</p>
        <p><small>Comment by {{this.username}} on {{this.createdAt}}</small></p>
      </div>
    {{/each}}
  </div>
  {{#if logged_in}}
    <form id="comment-form">
      <textarea id="comment-content" name="content" placeholder="Add a comment" required></textarea>
      <button type="submit" class="btn">Submit Comment</button>
    </form>
  {{/if}}
</main>