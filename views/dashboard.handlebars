<!-- views/dashboard.handlebars -->
{{#extends 'layouts/main'}}
{{#content 'body'}}
<main>
  <h2>Dashboard</h2>
  <a href="/dashboard/new" class="btn">âž• New Post</a>
  {{#each posts}}
  <div class="post">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <p>Posted by {{this.user.username}} on {{this.createdAt}}</p>
    <a href="/dashboard/edit/{{this.id}}" class="btn">Edit</a>
    <button data-id="{{this.id}}" class="btn delete-post">Delete</button>
  </div>
  {{/each}}
</main>
{{/content}}
<script src="/js/dashboard.js"></script>