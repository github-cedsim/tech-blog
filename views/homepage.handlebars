<!-- views/homepage.handlebars -->
{{#extends 'layouts/main'}}
{{#content 'body'}}
<main>
  <h2>Homepage</h2>
  {{#each posts}}
  <div class="post">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <p>Posted by {{this.user.username}} on {{this.createdAt}}</p>
  </div>
  {{/each}}
</main>
{{/content}}