{{!-- Set the title for the page --}}
{{!-- This is passed to the main layout --}}
{{!-- as `title` variable --}}
{{!-- and used in the title element of the layout --}}
{{!-- <title>{{title}} | Tech Blog</title> --}}
{{!-- as defined in the main.handlebars file --}}
{{!-- --}}
{{!-- Only the specific content for the homepage --}}
{{!-- is included here --}}
<div class="container mx-auto p-4">
  {{#each posts}}
  <div class="bg-white shadow-md p-4 my-4 rounded">
    <header class="bg-gray-300 p-2 rounded">
      <h2 class="text-2xl font-bold">{{this.title}}</h2>
    </header>
    <p>{{this.content}}</p>
    <footer class="text-sm text-gray-600">Posted by {{this.user.username}} on {{format_date this.createdAt}}</footer>
  </div>
  {{/each}}
  {{#each posts}}
<div class="post-card">
  <div class="card-header">
    <h2>{{this.title}}</h2>
    <p>by {{this.user.username}} on {{this.createdAt}}</p>
  </div>
  <div class="card-body">
    <p>{{this.content}}</p>
    <a href="/post/{{this.id}}" class="btn">View Post</a>
  </div>
</div>
{{/each}}
</div>