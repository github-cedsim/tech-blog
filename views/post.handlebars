<h1>{{title}}</h1>
<p>by {{user.username}} on {{createdAt}}</p>
<p>{{content}}</p>
<section>
  <h2>Comments</h2>
  {{#each comments}}
    <div>
      <p>{{content}}</p>
      <p>by {{user.username}} on {{createdAt}}</p>
    </div>
  {{/each}}
  {{#if loggedIn}}
    <form id="comment-form">
      <textarea name="content" placeholder="Leave a comment"></textarea>
      <button type="submit">Submit</button>
    </form>
  {{else}}
    <p><a href="/login">Login</a> to leave a comment.</p>
  {{/if}}
</section>
